#include <bits/stdc++.h>
using namespace std;

struct DSU {
    vector<int> p, r;
    DSU(int n) { p.resize(n); r.assign(n,0); for(int i=0;i<n;i++) p[i]=i; }
    int find(int x){ return p[x]==x?x:p[x]=find(p[x]); }
    void unite(int a,int b){
        a=find(a); b=find(b);
        if(a!=b){
            if(r[a]<r[b]) swap(a,b);
            p[b]=a;
            if(r[a]==r[b]) r[a]++;
        }
    }
};

int main() {
    int V=5;
    vector<vector<int>> edges={
        {2,0,1},{4,0,2},{3,1,3},{5,2,4}
    };

    sort(edges.begin(), edges.end());
    DSU d(V);
    int cost=0;

    for(auto &e: edges){
        int w=e[0], u=e[1], v=e[2];
        if(d.find(u)!=d.find(v)){
            d.unite(u,v);
            cost+=w;
            cout<<u<<" "<<v<<" "<<w<<"\n";
        }
    }
    cout<<"Cost "<<cost;
}
